
<h2>Our lovely animals for rent</h2>

<div class="main-container">
  <div class="cards">
    <% @animals.each do |animal| %>
      <div class="card">
        <%= cl_image_tag animal.photo.key %>
        <div class="card-infos">
          <div class="div">
            <%= link_to animal.name, animal_path(animal) %>
            <%= animal.species %>
          </div>
          <h2 class="card-availabilty">available</h2>
          <%#<img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-user avatar-bordered" />  %>
        </div>
      </div>
    <% end %>
  </div>
  <div id="map"
    style="width: 100%; height: 600px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
